<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:i18n="http://xml.zope.org/namespaces/i18n"
       i18n:domain="plone">
  <schema>
    <field type="zope.schema.Choice" name="item"
           form:widget="plone.app.z3cform.widget.RelatedItemsFieldWidget">
      <title i18n:translate="newspick_item_label">Content</title>
      <source>collective.themefragments.tiles.CatalogSource</source>
      <required>false</required>
    </field>
    <field type="zope.schema.TextLine" name="topic">
      <title i18n:translate="newspick_topic_label">Keyword</title>
      <description i18n:translate="newspick_topic_help">Keyword shown as tag. When not set, the first found keyword is used.</description>
      <required>false</required>
    </field>
    <field type="zope.schema.TextLine" name="title">
      <title i18n:translate="newspick_title_label">Title</title>
      <description i18n:translate="newspick_title_help">Full title shown by default. When not set, the original title is used.</description>
      <required>false</required>
    </field>
    <field type="zope.schema.TextLine" name="short_title">
      <title i18n:translate="newspick_short_title_label">Mobile title</title>
        <description i18n:translate="newspick_short_title_help">Short title shown on mobile devices. When not set, the full title is used.</description>
      <required>false</required>
    </field>
    <field type="zope.schema.TextLine" name="subtitle">
      <title i18n:translate="newspick_subtitle_label">Subtitle</title>
      <description i18n:translate="newspick_subtitle_help">Short subtitle shown above or below the title.</description>
      <required>false</required>
    </field>
    <fieldset name="portrait"
              label="Portrait"
              i18n:attributes="label newspick_portrait_label">
      <field name="focuspoint" type="zope.schema.BytesLine">
        <form:widget type="z3c.form.browser.text.TextFieldWidget">
          <klass>text-widget pat-focuspoint-widget</klass>
        </form:widget>
        <title i18n:translate="">Focus point</title>
        <required>false</required>
      </field>
      <field name="description" type="zope.schema.TextLine">
        <title i18n:translate="newspick_portrait_description_label">Description</title>
        <description i18n:translate="newspick_portrait_description_help">Leave empty, when you don't want to show a description box with below the pick image.</description>
        <required>false</required>
      </field>
    </fieldset>
    <fieldset name="settings"
              label="Settings"
              i18n:attributes="label newspick_settings_label">
      <field name="layout" type="zope.schema.Choice"
             form:widget="z3c.form.browser.radio.RadioFieldWidget">
        <title i18n:translate="newspick_settings_layout_label">Layout</title> <values>
          <element key="default" i18n:translate="newspick_layout_default_label">Default</element>
          <element key="grand" i18n:translate="newspick_layout_grand_label">Grand</element>
        </values>
        <default>default</default>
      </field>
      <field name="filter" type="zope.schema.Choice"
             form:widget="z3c.form.browser.radio.RadioFieldWidget">
        <title i18n:translate="newspick_settings_filter_label">Color filter</title>
        <values>
          <element key="none" i18n:translate="newspick_no_filter_label">No filter</element>
          <element key="red" i18n:translate="newspick_red_filter_label">Red filter</element>
          <element key="blue" i18n:translate="newspick_blue_filter_label">Blue filter</element>
        </values>
        <default>none</default>
      </field>
      <field name="text_align" type="zope.schema.Choice"
             form:widget="z3c.form.browser.radio.RadioFieldWidget">
        <title i18n:translate="newspick_settings_text_align_label">Text align</title>
        <values>
          <element key="left" i18n:translate="newspick_left_align_label">Align left</element>
          <element key="right" i18n:translate="newspick_right_align_label">Align right</element>
        </values>
        <default>left</default>
        <required>true</required>
      </field>
    </fieldset>
  </schema>
</model>
