<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:i18n="http://xml.zope.org/namespaces/i18n"
       i18n:domain="plone">
  <schema>
    <field name="username" type="zope.schema.BytesLine">
      <title i18n:translate="twitter_username_label">Twitter username</title>
      <required>True</required>
      <default>jyuplone</default>
    </field>
    <field name="width" type="zope.schema.Int">
      <title i18n:translate="embed_width_label">Width</title>
      <description i18n:translate="embed_width_help">Width of the embed in pixels (leave empty for default)</description>
      <required>False</required>
    </field>
    <field name="height" type="zope.schema.Int">
      <title i18n:translate="embed_height_label">Height</title>
      <description i18n:translate="embed_height_help">Height of the embed in pixels</description>
      <required>True</required>
      <default>600</default>
    </field>
  </schema>
</model>

