<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:i18n="http://xml.zope.org/namespaces/i18n"
       i18n:domain="plone">
  <schema>
    <field name="url" type="zope.schema.TextLine">
      <title i18n:translate="facebook_url_label">Facebook page URL</title>
      <required>True</required>
      <default>https://www.facebook.com/Historian-ja-etnologian-laitos-Jyväskylän-yliopisto-124313810925342/</default>
    </field>
    <field name="tabs" type="zope.schema.List"
           form:widget="z3c.form.browser.checkbox.CheckBoxFieldWidget">
      <title i18n:translate="facebook_tabs_label">Tabs</title>
      <value_type type="zope.schema.Choice">
        <values>
          <element key="timeline" i18n:translate="facebook_timeline_label">Timeline</element>
          <element key="messages" i18n:translate="facebook_messages_label">Messages</element>
          <element key="events" i18n:translate="facebook_events_label">Events</element>
        </values>
      </value_type>
      <required>False</required>
    </field>
    <field name="small_header" type="zope.schema.Bool"
           form:widget="z3c.form.browser.checkbox.SingleCheckBoxFieldWidget">
      <title i18n:translate="facebook_small_header_label">Use small header</title>
      <required>False</required>
      <default>True</default>
    </field>
    <field name="hide_cover" type="zope.schema.Bool"
           form:widget="z3c.form.browser.checkbox.SingleCheckBoxFieldWidget">
      <title i18n:translate="facebook_hide_cover_label">Hide cover photo</title>
      <required>False</required>
      <default>True</default>
    </field>
    <field name="show_facepile" type="zope.schema.Bool"
           form:widget="z3c.form.browser.checkbox.SingleCheckBoxFieldWidget">
      <title i18n:translate="facebook_show_facepile_label">Show friends faces</title>
      <required>False</required>
      <default>False</default>
    </field>
    <field name="width" type="zope.schema.Int">
      <title i18n:translate="embed_width_label">Width</title>
      <description i18n:translate="embed_width_help">Width of the embed in pixels (leave empty for default)</description>
      <required>False</required>
    </field>
    <field name="height" type="zope.schema.Int">
      <title i18n:translate="embed_height_label">Height</title>
      <description i18n:translate="embed_height_help">Height of the embed in pixels</description>
      <required>True</required>
      <default>600</default>
    </field>
  </schema>
</model>

