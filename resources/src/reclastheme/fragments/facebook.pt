<div class="fb-page pat-embed"
     data-adapt-container-width="true"
     data-height="${height}"
     data-hide-cover="${hide_cover}}"
     data-href="${url}"
     data-show-facepile="${show_facepile}"
     data-small-header="${small_header}"
     data-tabs="${tabs}"
     data-width="${width_facebook}"
     data-pat-embed="src://connect.facebook.net/fi_FI/sdk.js#xfbml=1&version=v2.8;width:${width};height:${height}"
     tal:define="url view/data/url|nothing;
                 tabs view/data/tabs|python:[];
                 tabs python:','.join(tabs);
                 hide_cover view/data/hide_cover|python:True;
                 hide_cover python:hide_cover and 'true' or 'false';
                 show_facepile view/data/show_facepile|python:False;
                 show_facepile python:show_facepile and 'true' or 'false';
                 small_header view/data/small_header|python:True;
                 small_header python:small_header and 'true' or 'false';
                 width view/data/width|nothing;
                 width_facebook python:width and str(width) or '350';
                 width python:width and str(width) or '100%';
                 height view/data/height|nothing;"
     tal:condition="url"><blockquote
     cite="${url}"
     class="fb-xfbml-parse-ignore"><a href="${url}">Facebook</a></blockquote></div>
